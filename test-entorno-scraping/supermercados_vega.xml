            <!-- <brand>*[class*='brand'], *[class*='maker']</brand>-->
            <!-- Límite de páginas -->
            <!-- <pagination 
                next_page_selector=".next-page-button:not(.disabled)" 
                max_pages="3"
                scroll = "1"
            />-->
            <limit>900</limit>
        </selectors>
    </website>
</websites>